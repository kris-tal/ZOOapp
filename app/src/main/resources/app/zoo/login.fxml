<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.zoo.LoginController">
   <children>
      <VBox layoutX="299.0" layoutY="2.0" prefHeight="800.0" prefWidth="445.0">
         <children>
            <ImageView fitHeight="223.0" fitWidth="451.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/zoo.png" />
                </image>
               <VBox.margin>
                  <Insets top="90.0" />
               </VBox.margin>
            </ImageView>
            <Pane prefHeight="258.0" prefWidth="446.0">
               <children>
                   <TextField fx:id="loginField" layoutX="69.0" layoutY="49.0" prefHeight="56.0" prefWidth="311.0" promptText="ID użytkownika">
                     <font>
                        <Font size="25.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                   <PasswordField fx:id="passwordField" layoutX="71.0" layoutY="122.0" prefHeight="57.0" prefWidth="311.0" promptText="Hasło">
                     <font>
                        <Font size="25.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </PasswordField>
               </children>
            </Pane>
             <Button fx:id="submitButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="57.0" prefWidth="237.0" text="Zatwierdź" translateX="100.0">
             <font>
                  <Font size="25.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
