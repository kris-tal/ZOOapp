<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.zoo.LoginController">
   <children>
      <VBox layoutX="299.0" layoutY="2.0" prefHeight="800.0" prefWidth="445.0">
         <children>
            <Label alignment="CENTER" prefHeight="114.0" prefWidth="562.0" text="ZOO">
               <font>
                  <Font name="Krub Regular" size="58.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" top="120.0" />
               </VBox.margin>
            </Label>
             <TextField fx:id="loginField" prefHeight="57.0" prefWidth="403.0" promptText="ID użytkownika">
               <font>
                  <Font size="30.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </TextField>
             <PasswordField fx:id="passwordField" prefHeight="21.0" prefWidth="562.0" promptText="Hasło">
               <font>
                  <Font size="30.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
               <VBox.margin>
                  <Insets bottom="60.0" />
               </VBox.margin>
            </PasswordField>
             <Button fx:id="submitButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="57.0" prefWidth="237.0" text="Zatwierdź" translateX="100.0">
             <font>
                  <Font size="25.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
